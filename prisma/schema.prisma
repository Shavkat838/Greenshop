generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id Int  @id @default(autoincrement())
  name String 
  images String[]
  price Int
  description String
  categoryId Int 
  category Category @relation(fields: [categoryId],references: [id])
}


model Category {
  id Int @id @default(autoincrement())
  title String
  product Products[] 
}



model Users {
    id Int @id @default(autoincrement())
    email String
    password String
    photo String
    firstname String
    lastname String
    phone String
    username String
    orders Orders[]
    role String @default("user")
}


model Orders{
  id Int @id @default(autoincrement())
  order Json[]
  userInformation Json
  status String
  userId Int 
  user  Users @relation(fields: [userId],references: [id])
}





